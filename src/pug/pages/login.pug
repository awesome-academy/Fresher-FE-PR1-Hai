extends ../base/_base.pug

block content
    .container
        +dataBreadcrumb("Trang chủ","Đăng nhập")
        .login__wrapper
            .row
                .col-md-6.col-sm-12
                    h2 Thông tin cá nhân
                    form(action='error-page.html')
                        .row
                            .col-12
                                .form-group
                                    +labelForm("u","Họ và tên:",true)
                                    +inputForm("fullName",false,false,"ipFullName")
                            .col-12
                                .form-group
                                    +labelForm("u","Email:",true)
                                    +inputForm("Email",false,false,"ipFullName")
                            .col-12
                                .form-check.d-flex.justify-content-between
                                    .left
                                        +inputCheckboxForm()
                                        +labelCheckboxForm("Ghi nhớ đăng nhập")
                                    .right
                                        a(href="#").forgotpw  Bạn quên mật khẩu?
                            .col-12
                                .button-group
                                    +buttonForm("submit","Đăng nhập")         
                .col-md-6.col-sm-12
                    h2 Bạn chưa có tài khoản?
                    p Đăng ký tài khoản để mua hàng nhanh hơn. Theo dõi đơn đặt hàng, vận chuyển. Cập nhật các tin tức sự kiện và các chương trình giảm giá của chúng tôi.
                    +buttonForm("button","Đăng ký","signup.html")                            