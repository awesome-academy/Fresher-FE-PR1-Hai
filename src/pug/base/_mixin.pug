include ../data/_data.pug

mixin headerListItemTopLeft
    each item in dataHeaderTopLeft
        a.nav-link(href='#').nav-item(class=`${item.classActive}`)
            i(class=`${item.icon}`)

mixin headerListItemTopRight
    each item in dataHeaderTopRight
        a.nav-link(href=`${item.link}`).nav-item= item.text

mixin headerBottomtitle(title, phone)
    h3.title= title
    span= phone

mixin headerNavMenu()
    each item in dataHeaderNavMenu
        a(href=`./${item.homepage}` class=`${item.className} ${item.classActive}`)= item.text

mixin text-title-w-icon(title)
    .title-icon.icon-4-square-size
        img(src=`./assets/images/4-black-squares.svg`, alt="Logo")
    h2= title

mixin footerTopAboutUS(classIcon,text)
    .about
        i(class=`${classIcon}`)
        p= text

mixin footerTopServiceList(data,haveicon)
    if  haveicon 
        each item in data
            .wrapper-list-item
                i(class=`${item.icon}`)
                a(href="#").haveicon--item= item.text
    else
        each item in data            
            a(href="#")= item.text

mixin footerMiddlePayment(data)
    each item in data
        .payment-list-item
            img(src=`./assets/images/payments/${item.img}`, alt="Logo")

mixin footerMiddleAnswers()
    each item in dataFooterAdvfeed
        .advisory-feedback-item
            .icon
                i(class=`${item.icon}`)
            .feedback-wrap
                h5= item.text
                strong= item.phone

mixin sliderShowImg()
    each item in slideShowImg
     .carousel-item(class=`${item.active}`)
        img(src=`./assets/images/${item.img}` alt=`${item.alt}` width=`${item.width}` height=`${item.height}`)
    
mixin sliderShowServices()
    each item in slideShowServices
        .slider-right__services-item.d-flex.align-items-center(class=`${item.active}`)
            .icon
                i(class=`${item.icon}`)
            .desc 
                h2= item.title
                p= item.text

mixin listTitleProductCategoriesvertical(name)
    .title-product-cate.d-flex.align-items-center.py-4
        div.icon-4-square-size
            img(src=`./assets/images/4-black-squares.svg`, alt="Logo")
        h2= name

mixin listProductCategoriesVertical()
    ul.list__categories-vertical
        each item in dataListProductCategoriesVertical
            li.item-cate(class=`${item.active}`)
                a(href='#' target='_blank').d-flex.align-items-center
                    div.icon-4-square-size
                        i(class=`${item.icon}`)
                    span= item.text

mixin dataBreadcrumb(level1,level2,level3=false)
    nav(aria-label='breadcrumb')
        ol.breadcrumb
            if level3
                li.breadcrumb-item
                    a(href='#')= level1
                li.breadcrumb-item
                    a(href='#')= level2
                li.breadcrumb-item.active(aria-current='page')= level3
            else
                li.breadcrumb-item
                    a(href='#')= level1
                li.breadcrumb-item
                    a(href='#')= level2

mixin labelForm(labelFor,text,active=true)
    if active
        label(for=labelFor)
            strong= text 
            span *
    else
        label(for=labelFor class="label-form")= text

mixin labelCheckboxForm(text)
    label.form-check-label(for='flexCheckDefault')
        strong= text

mixin inputForm(id,className=false,type=false,name=false)
    input(id=id class=className).form-control(type=type name=name)

mixin inputCheckboxForm()
    input#flexCheckDefault.form-check-input(type='checkbox' value='')

mixin buttonForm(type,text=false,link)
    if type == "button"
        button(type=type class="btn-form").active
            a(href=link)=text
    else
        button(type=type class="btn-form")= text           

mixin bannerImage(num)
    if num == 2
        each item in bannerImg 
            .col-md-6.col-sm-12
                a(href="#").banner__image-content
                    img(src=`./assets/images/banner/${item.img}`) 
    if num == 1
            .col-12
                a(href="#").banner__image-content
                    img(src=`./assets/images/banner/3.png alt="logo banner"`) 

mixin bannerServices()
    each val in bannerServices     
        div
            img(alt='Test' src=`./assets/images/logo-1/${val}`)

mixin tableContent()
    .table-responsive
        table.table.table-bordered
            thead
                tr
                    each item in tableCartTitle
                        th(scope='col')= item
            tbody
                each item in tableCartProductData
                    tr
                        th(scope='row')= item.id
                        td
                            img(src=`./assets/images/products/${item.productImg}`, alt="product img", srcset="")
                        td= item.name
                        td
                            strong.font-large= item.price
                        td
                            span= item.qty
                        td
                            strong.font-large= item.total
                        td
                            a(href="#")
                                i(class=`${item.iconDel} font-large font-large--red`) 